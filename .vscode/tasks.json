{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake Build",
            "type": "shell",
            "command": "C:/msys64/ucrt64/bin/cmake.exe",
            "args": [
                "--build",
                "${workspaceFolder}/build",
                "--config",
                "Debug",
                "--target",
                "all",
                "-j",
                "16"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [
                "$gcc"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "CMake Configure",
            "type": "shell",
            "command": "C:/msys64/ucrt64/bin/cmake.exe",
            "args": [
                "-B",
                "${workspaceFolder}/build",
                "-S",
                "${workspaceFolder}",
                "-G",
                "MinGW Makefiles",
                "-DCMAKE_C_COMPILER=C:/msys64/ucrt64/bin/gcc.exe",
                "-DCMAKE_CXX_COMPILER=C:/msys64/ucrt64/bin/g++.exe",
                "-DCMAKE_PREFIX_PATH=C:/msys64/ucrt64",
                "-DCMAKE_MAKE_PROGRAM=C:/msys64/ucrt64/bin/mingw32-make.exe"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "CPack",
            "type": "shell",
            "command": "C:/msys64/ucrt64/bin/cpack.exe",
            "args": [
                "-G",
                "WIX",
                "-C",
                "Release"
            ],
            "group": "build",
            "dependsOn": [
                "CMake Configure",
                "CMake Build"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/build"
            }
        }
    ]
}

